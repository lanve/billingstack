[DEFAULT]
########################
## General Configuration
########################
# Show more verbose log output (sets INFO log level output)
verbose = True

# Show debugging output in logs (sets DEBUG log level output)
debug = True

# Top-level directory for maintaining billingstack's state
#state_path = /var/lib/billingstack

# Log directory
#logdir = /var/log/billingstack

allowed_rpc_exception_modules = billingstack.exceptions, billingstack.openstack.common.exception

# Enabled API Version 1 extensions
# #enabled_extensions_v1 = none

# CORS settings
# cors_allowed_origin = *
# cors_max_age = 3600

#rabbit 
rabbit_host=localhost
rabbit_password=123456

[service:api]
# Address to bind the API server
# api_host = 0.0.0.0
api_listen = '0.0.0.0'

# Port the bind the API server to
api_port = 9001

#################################################
#                Central service
#################################################
#-----------------------
# SQLAlchemy Storage
#-----------------------
[central:sqlalchemy]
# Database connection string - to configure options for a given implementation
# like sqlalchemy or other see below
#database_connection = mysql://billingstack:billingstack@localhost:3306/billingstack
#connection_debug = 100
#connection_trace = False
#sqlite_synchronous = True
#idle_timeout = 3600
#max_retries = 10
#retry_interval = 10


